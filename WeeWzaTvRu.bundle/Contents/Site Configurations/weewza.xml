<?xml version="1.0" encoding="UTF-8"?>
<site site="http://embed.weewza.com"
      plugin="http://embed.weewza.com"
      initialState="playing"
      version="1.0">
  <!-- Playing -->
  <state name="playing">
    <event>
      <condition>
        <command name="pause"/>
      </condition>
      <action>
        <click x="40" y="511"/>
        <goto state="paused"/>
      </action>
    </event>
  </state>

  <!-- Paused -->
  <state name="paused">
    <event>
      <condition>
        <command name="play"/>
      </condition>
      <action>
        <click x="40" y="511"/>
        <goto state="playing"/>
      </action>
    </event>
  </state>
</site>
